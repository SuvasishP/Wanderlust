<% layout("layout/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label><br />
        <input
          name="listing[title]"
          placeholder="Enter a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks Good</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label><br />
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short Description</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label><br />
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <br />
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label><br />
          <input
            name="listing[price]"
            placeholder="1100"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label><br />
          <input
            name="listing[country]"
            placeholder="Indonesia"
            type="text"
            class="form-control"
            required
          />
        </div>
      </div>
      <br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label><br />
        <input
          name="listing[location]"
          placeholder="Bali "
          type="text"
          class="form-control"
          required
        />
      </div>
      <br />
      <br />
      <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
    </form>
  </div>
</div>
