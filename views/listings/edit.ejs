<% layout("/layout/boilerplate") %>
<form
  method="post"
  action="/listings/<%= listing._id %>?_method=PUT"
  novalidate
  class="needs-validation"
  enctype="multipart/form-data"
>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Your Listing</h3>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label><br />
        <input
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks Good</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label><br />
        <textarea
          rows="5"
          cols="20"
          name="listing[description]"
          class="form-control"
          required
        >
        <%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter a short description</div>
      </div>
      <br />
      <div class="mb-3">
        Original Image <br>
        <img src="<%= originalImageUrl %>">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image </label><br />
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please give a valid image link/url</div>
      </div>
      <br />
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label><br />
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a reasonable price</div>
        </div>
        <br />
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label><br />
          <input
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the country</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label><br />
        <input
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the location</div>
      </div>
      <br />
      <br />
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </div>
  </div>
</form>
